{
  "schemaVersion": 1,
  "id": "droids",
  "version": "${version}",

  "name": "Droids",
  "description": "Change yourself with modules, plugins and armor to transform into an Droid.",
  "authors": [
    "Rochedo098"
  ],
  "contact": {
    "homepage": "https://rochedo098.github.io/",
    "sources": "https://github.com/Rochedo098/Droids",
    "issues": "https://github.com/Rochedo098/Droids/issues"
  },

  "license": "Apache-2.0",
  "icon": "assets/droids/icon.png",

  "environment": "*",
  "entrypoints": {
    "main": [
      {
        "adapter": "kotlin",
        "value": "com.github.rochedo098.droids.Droids"
      }
    ],
    "client": [
      {
        "adapter": "kotlin",
        "value": "com.github.rochedo098.droids.DroidsClient"
      }
    ]
  },

  "mixins": [
    "droids.mixins.json"
  ],

  "depends": {
    "fabricloader": ">=0.8.7",
    "fabric": ">=0.38.1",
    "fabric-language-kotlin": "*",
    "minecraft": "1.18.x"
  },
  "suggests": {
    "flamingo": "*"
  }
}
