{
  "schemaVersion": 1,
  "id": "droids",
  "version": "${version}",

  "name": "Droids",
  "description": "Change yourself with modules, plugins and armor to transform into an Droid.",
  "authors": [
    "Rochedo098"
  ],
  "contact": {},

  "license": "Apache-2.0",
  "icon": "assets/droids/icon.png",

  "environment": "*",
  "entrypoints": {
    "main": [
      {
        "adapter": "kotlin",
        "value": "com.github.rochedo.droids.Droids"
      }
    ],
    "client": [
      {
        "adapter": "kotlin",
        "value": "com.github.rochedo.droids.DroidsClient"
      }
    ]
  },
  "mixins": [
    "droids.mixins.json"
  ],
  "depends": {
    "fabricloader": ">=0.8.7",
    "fabric": "*",
    "fabric-language-kotlin": "*",
    "minecraft": "1.17.x"
  },
  "suggests": {
    "flamingo": "*"
  }
}
